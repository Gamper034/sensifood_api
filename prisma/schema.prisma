generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @default(autoincrement()) @id
  email     String     @unique
  password  String
  age       Int?
  name      String
  gender    String?
  allergens Allergen[] @relation("UserAllergens")
  logProducts LogProduct[]
}

model Allergen {
  id           Int                @id @default(autoincrement())
  name         String             @unique
  id_categorie Int
  products  Product[]  @relation("ProductAllergens") // Many-to-Many relation
  users        User[]             @relation("UserAllergens")
  categorie    AllergenCategorie  @relation(fields: [id_categorie], references: [id])
}



model AllergenCategorie {
  id             Int       @id @default(autoincrement())
  name           String
  allergens      Allergen[]
}

model Product {
  id         Int        @id @default(autoincrement())
  name       String
  brand      String
  barcode    String
  ingredients String
  image      String
  id_categorie Int
  categorie    ProductCategorie @relation(fields: [id_categorie], references: [id])
  allergens  Allergen[] @relation("ProductAllergens") // Many-to-Many relation
  logProducts LogProduct[]  @relation("ProductLog") // Ajout de la relation oppos√©e
}

model ProductCategorie {
  id       Int      @default(autoincrement()) @id
  name     String
  products Product[]

}

model LogProduct {
  id         Int      @id @default(autoincrement())
  id_product Int
  id_user    Int
  date       DateTime @default(now())
  product    Product  @relation(fields: [id_product], references: [id], name: "ProductLog")
  user       User     @relation(fields: [id_user], references: [id])
}


